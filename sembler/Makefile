.POHNY: clean

clean:
	 -rm *\~
	 -rm */*\~
	 -rm */*/*\~    #Files with a trailing ~
	 -rm \#*
	 -rm */\#*
	 -rm */*/\#*    #Files with a leading # -- emacs tmp and crash files basically
	 -rm *.pyc
	 -rm */*.pyc
	 -rm */*/*.pyc  # Compiled python
	 -rm *.json
	 -rm */*.json
	 -rm */*.pdf
	 -rm */*/*.json
	 -rm */*/*.pdf
	 -rm purity*.dxf
	 -rm *.tex
	 -rm *.aux
	 -rm *.log     # Files generated by latex
